@import '../../static/style/thorui.wxss';

.header{
  padding: 40rpx 60rpx 40rpx 60rpx;
}

.title{
 font-size: 36rpx;
 color: #333;
 font-weight: bold;
}
.sub-title{
 font-size: 28rpx;
 color: #7A7A7A;
 padding-top: 18rpx;
}

.tui-flex-box{
  padding: 0 30rpx 80rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.tui-center{
  padding: 18rpx 0;
  margin-bottom: 12rpx;
  text-align: left;
  margin-left: 8rpx;
}
.mr{
  margin-right: 30rpx
}

.cell-color {
  background: #FFF !important;
  color: rgb(0, 0, 0);
}

.text-left {
  text-align: left;
  padding: 12px;
  font-size: 12px;
}

.tui-line-cell {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.tui-input {
  font-size: 32rpx;
  color: #333;
  padding-left: 20rpx;
  flex: 1;
  flex-shrink: 1;
}